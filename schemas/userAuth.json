{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/userAuth.json",
  "type": "object",
  "properties": {
    "email": {
      "type": "string",
      "minLength": 10,
      "pattern": "^[\\w!#$%&'*+/=?`{|}~^.-]+@[\\w.-]+\\.[a-zA-Z]{2,}$"
    },
    "password": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "email",
    "password"
  ]
}
